{
  "manifest_version": 2,
  "name": "Resubmit",
  "author": "Pawe≈Ç Tomulik",
  "description": "Re-submit messages received from users to a predefined recipient(s).",
  "version": "3.0.0a1",
  "applications": {
    "gecko": {
      "id": "resubmit@ezamber.pl",
      "strict_min_version": "68.0"
    }
  },

  "background": {
    "page": "background.html"
  },

  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": false,
    "browser_style": true
  },

  "permissions": [
    "storage",
    "accountsRead",
    "accountsFolders",
    "messagesRead"
  ],

  "icons": {
    "48" : "icons/resubmit.svg",
    "96" : "icons/resubmit.svg"
  },

  "default_locale": "en"
}
